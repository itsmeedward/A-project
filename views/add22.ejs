    <body>
        

<form action="/admin/add" method="post">

    <input type="text" name="title"placeholder="Başlık" required>
    <input type="text" name="short"placeholder="Short" required>
    <input type="text" name="long"placeholder="long" required>
    <input type="number" name="price"placeholder="price" required>
    <!-- <input type="text" name="kategori"placeholder="kategori" > -->
    <label for="cars">Kategori Seçin:</label>
    <select type="text" name="kategori" required>
        
        <% cat.forEach(category => { %>
        <option value="<%=category.kategori%>"><%=category.kategori%></option>
        
        <%  })%>
      </select>

      <select type="text" name="altkategori" >
        
        <% cat.forEach(category => { %>
        <option value="<%=category.altkategori%>"><%=category.altkategori%></option>
        
        <%  })%>
      </select>
    
    <input type="text" name="cdn"placeholder="cdn" >


    <input type="submit" value="Kaydet">

</form>



    </body>
    </html>