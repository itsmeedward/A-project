                      <div class="form-group">
                        <label for="exampleInputCity1">Ürün Fiyatı<span class="text-danger"> *</span></label>
                        <input type="number" class="form-control" id="exampleInputCity1"name="fiyat"placeholder="price" required>
                      </div>
                      <div class="form-group">
                        <label for="exampleTextarea1">Uzun Açıklama<span class="text-danger"> *</span></label>
                        <textarea class="form-control" name="long"placeholder="Detay" required id="exampleTextarea1" rows="4"></textarea>
                      </div>
                      <div class="form-group">
                        <div class="input-group">
                          
                          <div class="input-group-prepend">
                           
                           
                            <input type="text" class="form-control" placeholder="Kategori seçiniz:" aria-label="Text input with dropdown button" readonly>
                            <span class="text-danger"> *</span>
                            <select name="kategori" class="btn btn-sm btn-outline-success dropdown-toggle"   type="button" data-toggle="dropdown" aria-haspopup="true" required>
                              <% cat.forEach(category => { %>
                              <option value="<%=category.kategori%>" class="dropdown-item"><%=category.kategori%></option>
                              <%  })%>
                            </select>
                    
                            
                            <input type="text" class="form-control" placeholder="Alt Kategori seçiniz:" aria-label="Text input with dropdown button" readonly>
                           
                            <select name="altkategori" class="btn btn-sm btn-outline-success dropdown-toggle"   type="button" data-toggle="dropdown" aria-haspopup="true" >
                              <% cat.forEach(category => { %>
                              <option value="<%=category.altkategori%>" class="dropdown-item"><%=category.altkategori%></option>
                              <%  })%>
                            </select>
                          
                          </div>
                          
                        </div>
                      </div>
                      <button type="submit" class="btn btn-gradient-success mr-2">Submit</button>
                      <button class="btn btn-light">Cancel</button>
                    </form>
                  </div>
                </div>
              </div>
             
             
          
